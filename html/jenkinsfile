pipeline {
  agent{
    node{
      label 'master'
    }
  } 
  stages {
    stage('Initialize') {
      steps {
          script{
            def dockerHome = tool 'myDocker'
            env.PATH = "${dockerHome}/bin${env.PATH}"

          }
      }
    }
    stage('build') {
      agent { docker { image 'nginx' }}
       
      }
    
    stage('Docker Image') {
      steps{
        sh 'docker build -t site .'
      }
    }
    stage('RUN Image / Container Creation'){
      steps{
        sh 'docker run -p 2375:2375 -d --name contaiber site'
      }
    }   
    
  }